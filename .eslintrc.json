{
    "env": {
        "browser": true,
        "es6": false,
        "node": false,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "rules": {
        "indent": [2, 4],
        "no-console": 1,
        "no-trailing-spaces": 2,
        "semi": ["error", "always"]
        "no-lonely-if": "error",
        "no-throw-literal": "error"
    }
}
