{
    "env": {
        "browser": true,
        "es6": false,
        "node": false,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "rules": {
        "indent": [2, 4],
        "no-console": 1,
        "no-trailing-spaces": 2
    },
    "settings": {
        "react": {
            "version": "detect"
        },
        "no-trailing-spaces": 2,
        "semi": ["error", "always"],
        "eol-last": "error",
        "prefer-const": "error",
        "no-param-reassign": ["error", {
            "props": true
        }],
        "no-lonely-if": "error",
        "no-throw-literal": "error"
    }
}
